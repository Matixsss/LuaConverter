<UserControl x:Class="LuaConverter.Views.LoadFile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LuaConverter.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Name="ImagePanel" Drop="ImagePanel_Drop" AllowDrop="true" Background="Transparent">
        <Label FontSize="60" HorizontalAlignment="Center" VerticalAlignment="Center" Content="{Binding LabelText}"></Label>
    </Grid>
</UserControl>
